---
import Layout from '../layouts/Layout.astro'
import Footer from '../components/Footer'
import HeroSection from '../components/HeroSection'
import PromoFeatureSection from '../components/PromoFeatureSection'
import AwardsSection from '../components/AwardsSection'
import AlertSection from '../components/AlertSection'
import PetInsuranceGuideSection from '../components/PetInsuranceGuideSection'
import GetRatesSection from '../components/GetRatesSection'
import { allImages } from '../constants'
import HeroTitle from '../components/landing/HeroTitle'
---

<Layout
  title="Knose Pet Insurance - Aussie Dogs & Cats Protected | First 2 Months Free"
  description="Get 2 months FREE pet insurance with award-winning coverage. Customisable plans up to $25,000, no sub-limits, fast claims. Join 55,000+ insured pets. Get your quote today!"
  keywords="pet insurance australia, dog insurance, cat insurance, pet coverage, veterinary insurance, pet health, insurance quote, free months, knose"
  ogImage="/og-knose-pet-insurance.jpg"
>
  <div class="bg-white relative min-h-screen">
    <AlertSection />
    <HeroSection variant="landing" />
    <PromoFeatureSection />
    <GetRatesSection />
    <AwardsSection />
    <PetInsuranceGuideSection />
    <Footer />
  </div>
</Layout>
